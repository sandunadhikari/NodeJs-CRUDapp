<div class="container">
    <h2 style="text-align: center">Update User</h2>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            {{#each DeleteUser}}
                <form method="post" action="/updateUser/{{this.id}}">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="First Name" name="fname" value="{{this.fname}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Last Name" name="lname" value="{{this.lname}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" placeholder="Email" name="email" value="{{this.email}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Profession</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Profession" name="profession" value="{{this.profession}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                        </div>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary">Update User</button>
                        </div>
                        <div class="col-sm-4">
                        </div>

                    </div>
                </form>
            {{/each}}
        </div>
        <div class="col-md-2">
        </div>
    </div>

</div>